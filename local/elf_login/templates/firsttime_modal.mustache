<div class="row justify-content-center">
</div>

<div class="row justify-content-center">
    <div class="col-md-12">
        <div id="accordion">
            <div class="card">
                <div class="card-header" id="headingOne">
                <h5 class="mb-0">
                    <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    {{#str}} teachers_and_students, local_elf_login {{/str}} ({{#str}} in_ismuni, local_elf_login {{/str}})
                    </button>
                </h5>
                </div>

                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                    <p class="text-justify">
                        {{#str}}
                            teachers_students_info_1,
                            local_elf_login,
                            { "ismunilink":  {{# quote }}{{ ismunilink }}{{/ quote }}, "ismunipasslink": {{# quote }}{{ ismunipasslink }}{{/ quote }} }
                        {{/str}}
                    </p>
                    <p class="text-justify">{{#str}} teachers_students_info_2, local_elf_login {{/str}}</p>
                </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                <h5 class="mb-0">
                    <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    {{#str}} others_and_guests, local_elf_login {{/str}} ({{#str}} outside_ismuni, local_elf_login {{/str}})
                    </button>
                </h5>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">
                <div class="card-body text-justify">
                    <p class="text-justify">
                        {{#str}}
                            others_guests_info_1,
                            local_elf_login,
                            { "ismunilink":  {{# quote }}{{ ismunilink }}{{/ quote }} }
                        {{/str}}
                    </p>
                    <p class="text-justify">{{#str}} others_guests_info_2, local_elf_login {{/str}}</p>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>